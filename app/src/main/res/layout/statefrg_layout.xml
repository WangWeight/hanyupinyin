<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">
    <LinearLayout
        android:layout_width="@dimen/statefrg_width"
        android:layout_height="wrap_content"
        android:id="@+id/title2"
        android:orientation="vertical"

        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/statefrg_title_size"
            android:text="电压/电量"
            android:id="@+id/vol_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未知"
            android:layout_gravity="center"
            android:id="@+id/vol_tv_id"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/statefrg_width"
        android:layout_height="wrap_content"
        android:id="@+id/title1"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空间剩余/空间总计"
            android:textSize="@dimen/statefrg_title_size"
            android:layout_gravity="center"
            android:id="@+id/space_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="unKnown"
            android:id="@+id/space_tv_id"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/statefrg_width"
        android:layout_height="wrap_content"
        android:id="@+id/title3"
        android:orientation="vertical"

        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/statefrg_title_size"
            android:text="卫星数"
            android:layout_gravity="center"
            android:id="@+id/salt_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未知"
            android:layout_gravity="center"
            android:id="@+id/salt_tv_id"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/statefrg_width"
        android:layout_height="wrap_content"
        android:id="@+id/title4"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/statefrg_title_size"
            android:text="连接状态"
            android:id="@+id/connect_tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未知"
            android:layout_gravity="center"
            android:id="@+id/connect_tv_id"/>
    </LinearLayout>

</LinearLayout>