<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton2"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/setting_width_1"
            android:layout_height="wrap_content"
            android:text="飞行速度"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/fly_speed_tv"
            android:layout_width="@dimen/setting_width_2"
            android:layout_height="wrap_content"
            android:text="10m/s"
            android:layout_weight="1"/>
        <SeekBar
            android:id="@+id/fly_speed_sb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:progress="12"
            android:max="20"
            android:layout_weight="8"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/setting_width_1"
            android:layout_height="wrap_content"
            android:text="旋转速度"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/rotate_speed_tv"
            android:layout_width="@dimen/setting_width_2"
            android:layout_height="wrap_content"
            android:text="50d/s"
            android:layout_weight="1"/>
        <SeekBar
            android:id="@+id/rotate_speed_sb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:progress="50"
            android:max="100"
            android:layout_weight="8"/>
    </LinearLayout>
</LinearLayout>